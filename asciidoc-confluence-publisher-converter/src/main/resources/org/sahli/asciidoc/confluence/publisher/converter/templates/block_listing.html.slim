- if style == 'source'
  ac:structured-macro ac:name="code"
    ac:parameter ac:name="collapse" false
    - if "#{source_lang}" != ""
      ac:parameter ac:name="language" #{source_lang}
    ac:plain-text-body
      <![CDATA[#{content}]]>
- else
  ac:structured-macro ac:name="noformat"
    ac:plain-text-body
      <![CDATA[#{content}]]>